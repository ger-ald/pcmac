{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "windows build and debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/windowsBuild/pcmac.exe",
			//"args": ["../testfiles/i8085test.asm", "-ni8085test.bin", "-lnlist.txt", "-s", "-i../cpuDefinitions/"],
			"args": ["../cpuDefinitions/i8085.mac", "-K", "-lnlist.txt", "-ntest.lib"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build pcmac",
			"miDebuggerPath": "C:\\mingw32\\bin\\gdb.exe"
		},
		{
			"name": "linux build and debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/linuxBuild/pcmac",
			"args": ["../testfiles/i8085test.asm", "-ni8085test.bin", "-lnlist.txt", "-s", "-i../cpuDefinitions/"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build pcmac",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			"name": "msvc build and debug",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/windowsBuild/pcmac.exe",
			"args": ["../testfiles/i8085test.asm", "-ni8085test.bin", "-lnlist.txt", "-s", "-i../cpuDefinitions/"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"preLaunchTask": "msvc build pcmac",
		},
	]
}
